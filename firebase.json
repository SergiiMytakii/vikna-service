{
  "hosting": {
    "site": "vikna-service-prod",
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/api/createCheckoutPayload",
        "function": {
          "functionId": "createCheckoutPayload",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api/getPaymentStatus",
        "function": {
          "functionId": "getPaymentStatus",
          "region": "europe-west1"
        }
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
